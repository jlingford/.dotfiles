[user]
	name = jlingford
	email = james.lingford@gmail.com

[init]
    defaultBranch = main

[include]
    path = /home/james/.dotfiles/gitconfig/.delta/themes/catppuccin.gitconfig

[core]
    pager = delta

[interactive]
    diffFilter = delta --color-only

[delta]
    navigate = true  # use n and N to move between diff sections
    dark = true      # or light = true, or omit for auto-detection
    side-by-side = true
    line-numbers = true
    features = catppuccin-mocha

[merge]
    conflictstyle = zdiff3
[credential]
	helper = cache
